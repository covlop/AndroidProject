<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="mx.iteso.pam2017.mi707237.fotoimpactov3.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:weightSum="1">



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Name"
        android:ems="10"
        android:id="@+id/txtName"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColorHint="@drawable/selector"
        android:focusableInTouchMode="true"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="VIN"
        android:ems="10"
        android:id="@+id/txtVIN"
        android:layout_below="@+id/txtModel"
        android:textColorHint="@drawable/selector"
        android:focusableInTouchMode="true"

        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Model"
        android:ems="10"
        android:id="@+id/txtModel"
        android:layout_below="@+id/txtMake"
        android:layout_alignStart="@+id/txtMake"
        android:textColorHint="@drawable/selector"
        android:focusableInTouchMode="true"

         />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Color"
        android:ems="10"
        android:id="@+id/txtColor"
        android:textColorHint="@drawable/selector"
        android:focusableInTouchMode="true"
       />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Make"
        android:ems="10"
        android:id="@+id/txtMake"
        android:layout_below="@+id/txtName"
        android:layout_alignStart="@+id/txtName"
        android:textColorHint="@drawable/selector"
        android:focusableInTouchMode="true"
         />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Plate Number"
        android:ems="10"
        android:id="@+id/txtPlate"
        android:textColorHint="@drawable/selector"
        android:focusableInTouchMode="true"
        />

    <LinearLayout
        android:id="@+id/content_buttons"
        android:layout_width="193dp"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:weightSum="1"
        >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/ic_menu_camera"
        android:clickable="true"
        android:id="@+id/imgCamera"
        android:layout_weight="0.25" />

        <ImageView
            android:layout_width="46dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_menu_gallery"
            android:clickable="true"
            android:translationX="75dp"
            android:id="@+id/imgGallery" />
    </LinearLayout>

    <ImageView
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_menu_send"
        android:id="@+id/sendSiniestro"
        android:onClick="SendSiniestro"
        android:translationX="0dp"
        android:layout_gravity="left"
        android:layout_weight="0.60"
        />


    <ImageView
        android:layout_width="262dp"
        android:layout_height="112dp"
        app:srcCompat="@drawable/common_plus_signin_btn_icon_dark"
        android:id="@+id/imgPhoto"
        android:layout_marginTop="12dp"
        android:layout_weight="0.47" />


</LinearLayout>
